<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easyproject.easyee.sm.building.dao.BuildingDAO">

	<insert id="save" useGeneratedKeys="true" keyColumn="building_id" keyProperty="buildingId">
		insert into module_building(dname,loc) values(#{dname},#{loc})
	</insert>
	<delete id="delete">
		delete from module_building where building_id=#{buildingId}
	</delete>
	<update id="update">
		update module_building set dname=#{dname},loc=#{loc} where building_id=#{buildingId}
	</update>
	<select id="get" resultType="Building">
		select * from module_building where building_id=#{buildingId}
	</select>

	<select id="findAll" resultType="Building">
		select * from module_building
	</select>
	<select id="findMaxRow" resultType="int">
		select count(*) from module_building
	</select>
	
	<!-- EasyMyBatis-Pagination -->
	<select id="pagination" resultType="Building">
		${autoSQL}
	</select>
</mapper>